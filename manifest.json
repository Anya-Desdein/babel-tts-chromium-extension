{
  "manifest_version": 3,
  "name": "BBL-TextToSpeech",
  "version": "0.1",
  "description": "TTS that just works.",
  "icons": {
    "16": "img/logo_16.png",
    "32": "img/logo_32.png",
    "48": "img/logo_48.png",
    "128": "img/logo_128.png"
  },
  "permissions": [
    "storage",
    "offscreen"
  ],
  "action": {
    "default_popup": "home.html"
  },
  "background": {
    "service_worker": "./scripts/background.js",
    "type": "module"
  },
  "web_accessible_resources": [{
    "resources": [
      "themes/*.jpg",
      "themes/*.png",
      "themes/*.gif",
      "themes/*.svg"
    ],
    "matches": ["<all_urls>"]
  }]
}
