{
  "manifest_version": 3,
  "name": "BBL-TextToSpeech",
  "version": "0.1",
  "description": "TTS that just works.",
  "icons": {
    "16":  "images/logo/logo_16.png",
    "32":  "images/logo/logo_32.png",
    "48":  "images/logo/logo_48.png",
    "128": "images/logo/logo_128.png"
  },
  "permissions": [
    "storage",
    "offscreen"
  ],
  "action": {
    "default_popup": "popup/index.html"
  },
  "background": {
    "service_worker": "./background/background.js",
    "type": "module"
  },
  "web_accessible_resources": [{
    "resources": [
      "images/themes/*.jpg",
      "images/themes/*.png",
      "images/themes/*.gif",
      "images/themes/*.svg",

      "images/icons/*.jpg",
      "images/icons/*.png",
      "images/icons/*.gif",
      "images/icons/*.svg",

      "dupa.mp3"
    ],
    "matches": ["<all_urls>"]
  }]
}
