{
  "manifest_version": 3,
  "name": "Audio Playback Controller",
  "version": "1.0",
  "permissions": ["offscreen", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["toggle.mp3"],
      "matches": ["<all_urls>"]
    }
  ]
}
